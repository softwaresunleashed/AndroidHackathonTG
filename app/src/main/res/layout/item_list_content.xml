<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/LinearLayout_customrow">

        <Space
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_below="@id/LinearLayout_customrow"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:weightSum="2"
            android:layout_weight="1.5"
            android:id="@+id/LinearLayout_custom" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/user_default_image"
                android:scaleType="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Country Name"
                    android:id="@+id/tv_countryname"
                    android:textSize="15dp"
                    android:textColor="#4661ff" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_countryflag"
                android:enabled="false"
                android:clickable="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/md_4dp_margin"
            android:background="@color/divider_line"
            android:layout_marginLeft="@dimen/md_24dp_margin"
            android:layout_marginRight="@dimen/md_24dp_margin"
            />

    </LinearLayout>

</LinearLayout>

